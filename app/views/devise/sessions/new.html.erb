<div class="container">
  <div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      <fieldset>
        <h1>Sign In</h1>
        <hr class="colorgraph">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="social-buttons">
          <a href="#" class="btn btn-fb"><i class="fa fa-facebook"></i> Facebook</a>
          <a href="#" class="btn btn-tw"><i class="fa fa-twitter"></i> Twitter</a>
          <a href="#" class="btn btn-vk"><i class="fa fa-vk"></i> Vkontakte</a>
        </div>
        <div class="field">
          <br>  <%= f.email_field :email, class: 'form-control input-lg', autofocus: true, autocomplete: "email", placeholder: "Email Address" %> <br  />
        </div>
        <div class="field">
          <br>    <%= f.password_field :password, class: 'form-control input-lg', autocomplete: "current-password",placeholder: "Password" %> <br />
          <% if devise_mapping.rememberable? -%>
          <span class="button-checkbox">
            <button type="button" class="btn" data-color="info">Remember Me</button>
            <input type="checkbox" name="remember_me" id="remember_me" checked="checked" class="hidden">
          </span>
          <% end %>
          <hr class="colorgraph">
          <div class="row">
            <div class="actions">
              <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
            </div>
            <% end %>
          </div>
        </fieldset>
        <hr>
        <%= render "devise/shared/links" %>
      </div>
s
