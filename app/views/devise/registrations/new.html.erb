<link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Aclonica" />
<div class="container">
  <div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      <fieldset>
        <h1>Sign up</h1>
        <hr class="colorgraph">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, class: 'form-control input-lg', autocomplete: "email",placeholder: "Email adress" %>
        </div>

        <div class="form-group">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password,class: 'form-control input-lg', autocomplete: "new-password",placeholder: "Password" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation,class: 'form-control input-lg', autocomplete: "new-password", placeholder: "Password confirmation"%>
        </div>
        <hr class="colorgraph">
        <div class="row">
          <%= f.submit "Sign up", class: 'btn btn-outline-warning btn-lg' %>
        </div>
        <% end %>
        <hr>
        <%= render "devise/shared/links" %>
        <hr>
      </div>
    </div>
